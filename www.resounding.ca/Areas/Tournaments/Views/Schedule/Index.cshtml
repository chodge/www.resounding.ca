@model Resounding.Tournaments.Models.ScheduleViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="Website for Resounding Software. We build resounding success." />
        <meta name="keywords" content="Software Development,Resounding Software" />

        <title>Resounding Tournaments Schedule</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">    

        <script src="~/Content/js/jquery.js"></script>
        <script src="~/Content/js/bootstrap.js"></script>

        <link rel="Stylesheet" type="text/css" href="/Content/css/bootstrap.css" />
        <link rel="Stylesheet" type="text/css" href="/Content/css/bootstrap-responsive.css" />
        <link rel="Stylesheet" type="text/css" href="/Content/css/resounding.css" />
        <link rel="Stylesheet" type="text/css" href="/Content/css/tournament.css" />

        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-30184511-3']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    </head>

    <body>

        <div class="container">
            <div class="page-header">
                <h1>@Model.TournamentName<small>&nbsp;Building software for your business.</small></h1>
            </div>

            <div id="filter" class="navbar">
                <div class="navbar-inner">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse collapse">                        
                        <ul class="nav nav-pills">
                            <li class="active">
                                <a href="#" class="view">List</a>
                            </li>
                            <li>
                                <a href="#" class="view">Day</a>
                            </li>
                            <li>
                                <a href="#" class="view">Week</a>
                            </li>
                            <li>
                                <a href="#" class="view">Month</a>
                            </li>
                            <li class="divider-vertical"></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle current-team-filter" data-toggle="dropdown">
                                    @Model.TeamFilter
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#" class="team-filter" data-id="" data-toggle="dropdown">All Teams</a>
                                        @foreach (var team in Model.Teams) {
                                            <a href="#" class="team-filter" data-id="@team.Id" data-toggle="dropdown">@team.Name</a>
                                        }
                                    </li>

                                </ul>
                            </li>
                        </ul>
                        <ul class="nav pull-right">                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    More
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button type="button" class="btn btn-danger btn-block">Reset Data</button>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div id="main"></div>
        </div>

        <script data-main="/Content/js/Schedule/index.js" src="~/Content/js/libs/require.js"></script>
    </body>
</html>