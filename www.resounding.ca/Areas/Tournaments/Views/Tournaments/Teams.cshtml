@model Resounding.Tournaments.Models.TeamsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="Website for Resounding Software. We build resounding success." />
    <meta name="keywords" content="Software Development,Resounding Software" />

    <title>Resounding Tournaments Teams</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">    

    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>

    <link rel="Stylesheet" type="text/css" href="/Content/css/bootstrap.css" />
    <link rel="Stylesheet" type="text/css" href="/Content/css/bootstrap-responsive.css" />
    <link rel="Stylesheet" type="text/css" href="/Content/css/resounding.css" />
    <link rel="Stylesheet" type="text/css" href="/Content/css/tournament.css" />

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-30184511-3']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>

    <div class="container">
        <div class="page-header">
            <h1>@Model.TournamentName<small>&nbsp;Building software for your business.</small></h1>
        </div>

        <div id="roles" class="navbar">
            <div class="navbar-inner">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand">Role</a>
                <div class="nav-collapse collapse">
                    <ul class="nav nav-pills pull-right">
                        <li class="active">
                            <a href="#" data-role="public" data-target="#public-explanation">Public</a>
                        </li>
                        <li>
                            <a href="#" data-role="player" data-target="#player-explanation">Player</a>
                        </li>
                        <li>
                            <a href="#" data-role="coach" data-target="#coach-explanation">Coach</a>
                        </li>
                        <li>
                            <a href="#" data-role="convenor" data-target="#convenor-explanation">Convenor</a>
                        </li>
                        <li class="divider">

                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                More
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <button type="button" class="btn btn-danger btn-block">Reset Data</button>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="messages" class="row">
            <div id="public-explanation" class="alert offset6 span6 fade in">
                <button type="button" class="close" data-dismiss="alert">×</button>
                When the <strong>Public</strong>
                views the site, they see basic information about teams and players,
                but no personal data.
            </div>
            <div id="player-explanation" class="alert offset6 span6 fade hide">
                <button type="button" class="close" data-dismiss="alert">×</button>
                A <strong>Player</strong> can see detailed information about his or her own team,
                and can edit their own information.
            </div>
            <div id="coach-explanation" class="alert offset6 span6 fade hide">
                <button type="button" class="close" data-dismiss="alert">×</button>
                A <strong>Coach</strong> can see and edit detailed information for his or her own teams.
            </div>
            <div id="convenor-explanation" class="alert offset6 span6 fade hide">
                <button type="button" class="close" data-dismiss="alert">×</button>
                A <strong>Convenor</strong> can see and edit all information for all teams.
            </div>
        </div>
        
        <div id="teams">            
        @foreach (var team in Model.Teams) {
            <div id="team-@team.Id" class="row-fluid">
                <h1>@team.Name</h1>
                <div class="info">
                    <div>
                        Home Field: <strong>@team.HomeField</strong>
                    </div>
                    <div>
                        Coach: <strong>@team.Coach.Name</strong>
                    </div>
                </div>
            </div>
        }
        </div>
        
    </div>

    <script src="../../../../Content/js/require.js"></script>
    <script>
    require.config({
        baseUrl: '/Content/js',
        shim: {
            backbone: {
                deps: ['underscore', 'jquery'],
                exports: 'Backbone'
            },
            underscore: {
                exports: '_'
            }
        }
    });
    require(['teams/tournament_application'], function (app) {
        //debugger;
        app.start();
    });
    </script>
</body>
</html>
