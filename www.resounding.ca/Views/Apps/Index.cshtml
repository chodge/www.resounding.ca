    <script type="text/javascript">
    $(function() {

        $('.canal-route a')
            .mouseenter(function() {
                $('div', this).addClass('hover');
            })
            .mouseleave(function() {
                $('div', this).removeClass('hover');
            });

        $('.canal-route div.img')
            .popover({
                title: 'Get the App',
                content: 'Buy it now on Google Play'
            });
    });    
