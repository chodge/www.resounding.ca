    <script type="text/javascript">
    $(function() {

        var enter = function(img) {
            img.attr('src', img.attr('src').replace('.png', '-hover.png'));
        };

        var leave = function(img) {
            img.attr('src', img.attr('src').replace('-hover', ''));
        };

        $('.links a')
            .mouseenter(function() {
                //enter($('img', this));
                $('div', this).addClass('hover');
            })
            .mouseleave(function() {
                //leave($('img', this));
                $('div', this).removeClass('hover');
            });
    });    
